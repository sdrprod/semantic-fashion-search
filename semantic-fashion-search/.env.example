# ============================================
# Environment Variables - Semantic Fashion Search
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration (for Claude intent extraction)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Impact Affiliate API
IMPACT_ACCOUNT_SID=your-impact-account-sid
IMPACT_AUTH_TOKEN=your-impact-auth-token
IMPACT_CAMPAIGN_ID=your-default-campaign-id
# Comma-separated list of all campaign IDs to sync
IMPACT_CAMPAIGN_IDS=11832,12108,16384,16860,17880,17059,17634,18534,18662,24273,24275,32511,20350,22474,26892,26893,30483,38125,38260,38928,44724

# Admin Security
ADMIN_SECRET=generate-a-strong-secret-here
INDEX_SECRET=your-secret-key-for-indexing-endpoint

# Google OAuth (for admin authentication)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXTAUTH_SECRET=generate-a-32-char-random-string
NEXTAUTH_URL=http://localhost:3000

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
